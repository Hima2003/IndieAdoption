}

/* Mobile layout */
.container {
  width: 100%;
  padding: 0 1rem;
  box-sizing: border-box;
}

.col-25 {
    float: left;
    width: 25%;
    margin-top: 6px;
  }
  
  /* Floating column for inputs: 75% width */
  .col-75 {
    float: left;
    width: 75%;
    margin-top: 6px;
  }
  
  /* Clear floats after the columns */
  .row:after {
    content: "";
    display: table;
    clear: both;
  }
  input[type=submit]{
    margin: 5px;
    color: black;
    padding: 12px 20px;
    background: orange;
    border: 1px solid orange;
    border-radius: 20px;
    outline:none;
    cursor: pointer;
    margin-left: 400px;
    
  }
  input[type=submit]:hover{
    background-color: white;
  }
  
/* Tablet layout */
@media (min-width: 768px) {
  .container {
    max-width: 768px;
    margin: 0 auto;
  }
}

/* Desktop layout */
@media (min-width: 1024px) {
  .container {
    max-width: 1024px;
    margin: 0 auto;
  }
}

/* Adjust font size for small screens */
@media (max-width: 480px) {
  .details, .report {
    font-size: 0.8rem;
  }
}

/* Adjust input and textarea height for small screens */
@media (max-width: 360px) {
  input[type="text"], input[type="tel"], textarea {
    height: 2.5rem;
  }
}
